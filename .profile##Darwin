# Add personal binaries to PATH
export PATH="$PATH:$HOME/bin"

# Add LaTeX to INFOPATH
export INFOPATH="$INFOPATH:/usr/local/texlive/2014/texmf-dist/doc/info"
# Add LaTeX to MANPATH
export MANPATH="$MANPATH:/usr/local/texlive/2014/texmf-dist/doc/man"
# Add LaTeX to PATH
export PATH="$PATH:/usr/local/texlive/2014/bin/x86_64-darwin"

# Node and NPM
export NPM_PACKAGES="$HOME/node/npm-packages"
export NODE_PATH="$NPM_PACKAGES/lib/node_modules:$NODE_PATH"
# Make local binaries available before global ones
export PATH="$PATH:$NPM_PACKAGES/bin:$HOME/node/bin"
export MANPATH="$NPM_PACKAGES/share/man:$MANPATH"
# export PATH="$PATH:$(npm bin)"
export PATH="$PATH:./node_modules/.bin"

