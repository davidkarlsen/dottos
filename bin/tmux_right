#!/bin/bash

ICON="#[fg=colour7,bg=colour4]"
ITEM="#[fg=colour0,bg=colour7]"
RESET="#[fg=default,bg=default]"

NETSPEEDS() {
    # wifi
    speeds=`ifstat -i eth1 -z -q 1 1 | tail -n 1`
    in=`echo $speeds | awk '{print $1}'`
    out=`echo $speeds | awk '{print $2}'`

    # ethernet
    if [ $in == "0.00" ] && [ $out == "0.00" ]; then
        speeds=`ifstat -i en5 -z -q 1 1 | tail -n 1`
        in=`echo $speeds | awk '{print $1}'`
        out=`echo $speeds | awk '{print $2}'`
    fi

    # wifi 0 but no ethernet
    if [ $in == "n/a" ] && [ $out == "n/a" ]; then
        speeds=`ifstat -i en0 -z -q 1 1 | tail -n 1`
        in=`echo $speeds | awk '{print $1}'`
        out=`echo $speeds | awk '{print $2}'`
    fi

    # echo -n "$(echo -n "$ICON") ‚Üì $ITEM $in $RESET $ICON ‚Üë $ITEM $out $RESET "
    echo -n "$(echo -n "$ICON") Óí≤ $ITEM $in $RESET $ICON Óí≥ $ITEM $out $RESET "
}

DOCKER() {
    count=`docker ps | tail -n +2 | wc -l | awk {'print $1'}`

    if [ "$count" -eq "0" ]; then
        echo -n ''
    else
        # echo -n "$ICON üê≥  $ITEM $count $RESET "
        # echo -n "$ICON D $ITEM $count $RESET "
        echo -n "$ICON Óß≥ $ITEM $count $RESET "
    fi
}

TIME() {
    echo -n "$ITEM $(date "+%H:%M") $RESET "
}

DATE() {
    echo -n "$ITEM $(date "+%d/%m") $RESET"
}

IP() {
    echo -n "$ICON ÓÜÉ $ITEM $(curl icanhazip.com) $RESET"
    # echo -n "$ICON Óöá $ITEM $(curl icanhazip.com) $RESET"
}

MEM() {
    echo -n "$ICON Óìë $ITEM mem $RESET"
    echo -n "$ICON Óê´ $ITEM mem $RESET"
}

STORAGE() {
    space=`df -h | grep ^/dev/ploop* | awk '{gsub ("G",""); print $3"/"$4"G"}'`
    echo -n "$ICON Óëù $ITEM $space $RESET"
}

echo -n "$(IP) $(STORAGE) $(NETSPEEDS)$(DOCKER)"
